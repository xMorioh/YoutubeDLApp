<Window x:Class="YoutubeDLApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDLApp"
        mc:Ignorable="d"
        Title="yt-dlp App" Height="375" Width="429" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/347204f4454719acb08c32b986217f10.png" Opacity="1" Stretch="Fill" TileMode="None">
            <ImageBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="1.1" ScaleY="1.1"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform X="0.0075" Y="0.02"/>
                </TransformGroup>
            </ImageBrush.RelativeTransform>
        </ImageBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="YoutubeLink" Margin="10,35,10,0" Text="Youtube Link" Height="18" VerticalAlignment="Top" TextChanged="YoutubeLink_TextChanged" InputScope="Url"/>
        <TextBox x:Name="VideoOutputDir" HorizontalAlignment="Left" Margin="20,241,0,0" VerticalAlignment="Top" Width="165" TextChanged="VideoOutputDir_TextChanged" InputScope="FullFilePath" Height="18" Loaded="VideoOutputDir_Loaded" PreviewMouseLeftButtonDown="VideoOutputDir_MouseDown"/>
        <Button x:Name="DownloadButton" Content="Download" HorizontalAlignment="Center" Margin="0,273,0,0" VerticalAlignment="Top" Click="DownloadButton_Click" IsEnabled="False" Height="20" Width="58"/>
        <RadioButton x:Name="VideoRadioButton" Content="Video" HorizontalAlignment="Left" Margin="36,98,0,0" VerticalAlignment="Top" Checked="VideoRadioButton_Checked" Height="15" Width="50"/>
        <RadioButton x:Name="AudioRadioButton" Content="Audio" HorizontalAlignment="Left" Margin="91,98,0,0" VerticalAlignment="Top" Checked="AudioRadioButton_Checked" IsChecked="True" Height="15" Width="51"/>
        <CheckBox x:Name="PlaylistCheckbox" Content="Playlist" HorizontalAlignment="Left" Margin="36,166,0,0" Height="15" VerticalAlignment="Top" Checked="PlaylistCheckbox_Checked" Width="56"/>
        <GroupBox Header="" HorizontalAlignment="Left" Margin="20,64,0,0" VerticalAlignment="Top" Height="74" Width="140"/>
        <TextBlock Margin="0,0,111,12" TextWrapping="Wrap" Text="Local Youtube-dlp Version:" HorizontalAlignment="Right" Width="142" VerticalAlignment="Bottom" IsEnabled="False" Opacity="0.5" Height="16"/>
        <TextBox x:Name="Youtubedlpversion" Margin="0,0,10,10" TextChanged="Youtubedlpversion_TextChanged" HorizontalAlignment="Right" Width="96" VerticalAlignment="Bottom" IsEnabled="False" Height="18" Loaded="Youtubedlpversion_Loaded" IsReadOnly="True"/>
        <TextBox x:Name="AudioOutputDir" HorizontalAlignment="Right" Margin="0,241,17,0" VerticalAlignment="Top" Width="165" TextChanged="AudioOutputDir_TextChanged" InputScope="FullFilePath" Height="18" Loaded="AudioOutputDir_Loaded" PreviewMouseLeftButtonDown="AudioOutputDir_MouseDown"/>
        <Button x:Name="UpdateDependenciesButton" Content="Update Dependencies" HorizontalAlignment="Left" Margin="10,0,0,8" VerticalAlignment="Bottom" Width="132" Click="UpdateDependenciesButton_Click"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,220,17,0" TextWrapping="WrapWithOverflow" Text="Audio Output Directory:" VerticalAlignment="Top" Width="165" Foreground="Black" Background="#FFD6D6D6"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,220,0,0" TextWrapping="WrapWithOverflow" Text="Video Output Directory:" VerticalAlignment="Top" Width="165" Foreground="Black" Background="#FFD6D6D6"/>
    </Grid>
</Window>
